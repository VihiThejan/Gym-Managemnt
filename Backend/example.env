# ============================================================
# Gym Management System - Environment Configuration
# ============================================================
# Copy this file to .env and update with your actual values
# ============================================================

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# MySQL Database Connection String
# Format: mysql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL="mysql://root:your_password@localhost:3306/gym_management"

# ============================================================
# SERVER CONFIGURATION
# ============================================================
# Port for the backend server
PORT=5000

# Node Environment (development, production, test)
NODE_ENV=development

# ============================================================
# JWT & AUTHENTICATION
# ============================================================
# Secret key for JWT token generation (use a strong, random string)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# JWT Token Expiration (e.g., 1h, 7d, 30d)
JWT_EXPIRES_IN=7d

# ============================================================
# CORS CONFIGURATION
# ============================================================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Allowed Origins (comma-separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================================
# Email Service Provider (gmail, outlook, etc.)
EMAIL_SERVICE=gmail

# Email Account
EMAIL_USER=your_gym_email@gmail.com

# Email Password or App Password
EMAIL_PASSWORD=your_email_app_password

# Email From Name
EMAIL_FROM_NAME=Mega Power Gym

# ============================================================
# SMS/OTP CONFIGURATION (Optional - for OTP verification)
# ============================================================
# SMS API Key (e.g., Twilio, Nexmo, etc.)
SMS_API_KEY=your_sms_api_key_here

# SMS API Secret
SMS_API_SECRET=your_sms_api_secret_here

# SMS Sender ID
SMS_SENDER_ID=MEGAGYM

# OTP Expiration Time (in minutes)
OTP_EXPIRY_MINUTES=5

# ============================================================
# FILE UPLOAD CONFIGURATION (Optional)
# ============================================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=5242880

# Upload directory path
UPLOAD_DIR=./uploads

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# ============================================================
# SESSION CONFIGURATION (Optional)
# ============================================================
# Session Secret
SESSION_SECRET=your_session_secret_key_change_this

# Session Max Age (in milliseconds)
SESSION_MAX_AGE=86400000

# ============================================================
# PAYMENT GATEWAY (Optional - for online payments)
# ============================================================
# Payment Gateway API Key
PAYMENT_API_KEY=your_payment_gateway_api_key

# Payment Gateway Secret
PAYMENT_API_SECRET=your_payment_gateway_secret

# Payment Currency
PAYMENT_CURRENCY=LKR

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Directory
LOG_DIR=./logs

# ============================================================
# RATE LIMITING
# ============================================================
# Maximum requests per window
RATE_LIMIT_MAX=100

# Time window in minutes
RATE_LIMIT_WINDOW=15

# ============================================================
# BCRYPT CONFIGURATION
# ============================================================
# Bcrypt Salt Rounds (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=10

# ============================================================
# APPLICATION SETTINGS
# ============================================================
# Application Name
APP_NAME=Mega Power Gym Management

# Application Version
APP_VERSION=1.0.0

# Contact Email
CONTACT_EMAIL=info@megapowergym.com

# Contact Phone
CONTACT_PHONE=+94771234567

# ============================================================
# TIMEZONE CONFIGURATION
# ============================================================
# Server Timezone
TIMEZONE=Asia/Colombo

# ============================================================
# BACKUP CONFIGURATION (Optional)
# ============================================================
# Database Backup Directory
BACKUP_DIR=./backups

# Automatic Backup Enabled (true/false)
AUTO_BACKUP=false

# Backup Frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# ============================================================
# DEVELOPMENT TOOLS (Development Only)
# ============================================================
# Enable Debug Mode
DEBUG=false

# Show SQL Queries in Console
SHOW_SQL_QUERIES=false

# ============================================================
# NOTES:
# ============================================================
# 1. Never commit the actual .env file to version control
# 2. Add .env to your .gitignore file
# 3. Use strong, unique values for secrets and passwords
# 4. For production, use environment variables or secure vault
# 5. Update DATABASE_URL with your actual database credentials
# 6. Generate secure JWT_SECRET: openssl rand -base64 32
# ============================================================
